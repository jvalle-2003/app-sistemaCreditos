@{
    ViewBag.Title = "Login";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button id="myAlert" type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    @Scripts.Render("~/bundles/jquery")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        .fondo {
            background-image: url('https://educredito.org.ve/wp-content/uploads/2021/07/Fondosadministrados1-1-1024x804.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            /*padding: 50px;*/
            height: 100vh; /* Alto del contenedor igual al 100% del alto de la ventana del navegador */
            width: 100vw; /* Ancho del contenedor igual al 100% del ancho de la ventana del navegador */
        }
    </style>

</head>
<body class="fondo">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div style="text-align: center">
                            <h1 class="text-center">¡Bienvenido!</h1>
                            <img width="100px" height="100px" src="https://cdn-icons-png.flaticon.com/512/3150/3150707.png" alt="Alternate Text" />

                        </div>
                         </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <form action="@Url.Action("Logged", "Login")" method="post">
                                <div class="form-group">
                                    <label for="usuario">Usuario</label>
                                    <input type="text" class="form-control input-width" id="usuario" name="usuario" placeholder="Ingrese su usuario">
                                </div>
                                <div class="form-group">
                                    <label for="Contraseña">Contraseña</label>
                                    <input type="password" class="form-control input-width" id="Contraseña" name="Contraseña" placeholder="Ingrese su contraseña">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
